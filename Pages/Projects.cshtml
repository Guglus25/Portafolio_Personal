@page "/Projects"
@model Portafolio.Pages.ProjectsModel


<!-- Projects Section-->
<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Proyectos</span></h1>
        </div>
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                <!-- Project Card 1-->
                <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                    <div class="card-body p-0">
                        <div class="d-flex align-items-center">
                            <div class="p-5">
                                <h2 class="fw-bolder">Tecnoapps</h2>
                                <p>
                                    Este es un proyecto educativo el cual se desarrollo con una tecnología ASP.Net y una api en JSON Server para el almacenamiento de información.
                                </p>
                                <a href="http://tecnoapps.somee.com/" target="_blank">Tecnoapps.somee.com</a>
                            </div>
                            <img class="img-fluid" src="~/imagen/tecnoapps.png" alt="..." />
                        </div>
                    </div>
                </div>
                <!-- Project Card 2-->
                <div class="card overflow-hidden shadow rounded-4 border-0">
                    <div class="card-body p-0">
                        <div class="d-flex align-items-center">
                            <div class="p-5">
                                <h2 class="fw-bolder">API JSON Server</h2>
                                <p>
                                    Este es un proyecto API con la tecnología JSON Server para el almacenamiento de información de los aplicativos que se puedan utilizar.
                                </p>
                                <a href="https://apitecnoapps.onrender.com/" target="_blank">apitecnoapps.onrender.com</a>
                            </div>
                            <img class="img-fluid" src="~/imagen/json server.png" alt="..." />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Call to action section-->
<section class="py-5 bg-gradient-primary-to-secondary text-white">
    <div class="container px-5 my-5">
        <div class="text-center">
            <h2 class="display-4 fw-bolder mb-4">Construyamos algo juntos</h2>
            <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="Contact">Contacta me</a>
        </div>
    </div>
</section>

@{
}
